<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewWaveformArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:alpha="0.5"
        android:background="@android:color/white"
        android:scaleType="matrix" />

    <ImageView
        android:id="@+id/imageViewWaveformBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:alpha="0.8"
        android:scaleType="matrix"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageViewWaveform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageViewWaveformArea"
        android:layout_alignLeft="@id/imageViewWaveformArea"
        android:layout_alignRight="@id/imageViewWaveformArea"
        android:layout_alignTop="@id/imageViewWaveformArea"
        android:layout_centerVertical="true"
        android:scaleType="matrix"
        android:visibility="invisible"
        android:layout_alignStart="@id/imageViewWaveformArea"
        android:layout_alignEnd="@id/imageViewWaveformArea" />

    <RelativeLayout
        android:id="@+id/starView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageViewWaveformArea"
        android:layout_alignLeft="@id/imageViewWaveformArea"
        android:layout_alignRight="@id/imageViewWaveformArea"
        android:layout_alignTop="@id/imageViewWaveformArea"
        android:layout_centerVertical="true"
        android:scaleType="matrix"
        android:layout_alignStart="@id/imageViewWaveformArea"
        android:layout_alignEnd="@id/imageViewWaveformArea">

    </RelativeLayout>

</RelativeLayout>